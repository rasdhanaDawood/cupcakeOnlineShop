<%- include('../partials/head.ejs') %>
    <%- include('../partials/userHeader.ejs') %>
        <!-- Breadcrumb Begin -->
        <style>
            .disabled {
                opacity: 0.5;
                pointer-events: none;
            }
        </style>
        <div class="breadcrumb-option">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="breadcrumb__text">
                            <h2>Shop</h2>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="breadcrumb__links">
                            <a href="/home">Home</a>
                            <span>Shop</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Breadcrumb End -->

        <!-- Shop Section Begin -->
        <section class="shop spad">
            <div class="container">
                <div class="shop__option">
                    <div class="row">

                        <div class="col-lg-7 col-md-7">
                            <div class="shop__option__search">

                                <form action="#">
                                    <select class="form-control" name="category" id="category">
                                        <option>Categories</option>
                                        <option value="All">All Products</option>

                                        <% for( let i=0;i<category.length;i++) { %>

                                            <option value='<%= category[i]._id%>'>
                                                <%= category[i].name%>
                                            </option>

                                            <% } %>
                                    </select>

                                    <input type="text" placeholder="Search" name="name">
                                    <button type="submit"><i class="fa fa-search"></i></button>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-5 col-md-5">
                            <div class="shop__option__right">


                                <select name="sort" id="sort">

                                    <option value=" sort">Sort</option>
                                    <option value="nameAsc">Name:Ascending</option>
                                    <option value="nameDesc">Name:Descending</option>
                                    <option value="lowToHigh">Price:Low to High</option>
                                    <option value="highToLow">Price: High to Low</option>
                                    <option value="rating">Rating</option>
                                    <option value="featured">Featured</option>

                                </select>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="products-container">
                    <div class="row">
                        <% if(product.length>0){%>
                            <%for(let i=0;i<product.length;i++){ %>
                                <div class="col-lg-3 col-md-6 col-sm-6">

                                    <div class="product__item">
                                        <div class="product__item__pic set-bg">
                                            <a href="/product?id=<%=product[i]._id %>">
                                                <img src="/img/shop/<%=product[i].images[0]%>"
                                                    alt="<%=product[i].name%>" style=" height: 100%;width: 100%;">
                                        </div>

                                        <div class="product__item__text">
                                            <h6>
                                                <%=product[i].name%>
                                                    </a>
                                            </h6>
                                            <div class="product__item__price">
                                                ₹<%=product[i].price%>/piece
                                            </div>
                                            <%if(product[i].stock<=0){%>
                                                <div class="cart_add">
                                                    <a href="#">
                                                        Out of stock
                                                    </a>
                                                </div>
                                                <%}else{%>
                                                    <div class=" cart_add">
                                                        <a href=" /cart/<%=product[i]._id%>">Add to cart</a>
                                                    </div>
                                                    <%}%>
                                        </div>

                                    </div>

                                </div>
                                <%} } else {%>
                                    Products Not Found

                                    <% } %>

                    </div>
                </div>
            </div>
            <!-- <div class="shop__last__option">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="shop__pagination">
                            <a href="#">1</a>
                            <a href="#">2</a>
                            <a href="#">3</a>
                            <a href="#"><span class="arrow_carrot-right"></span></a>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="shop__last__text">
                            <p>Showing 1-9 of 10 results</p>
                        </div>
                    </div>
                </div>
            </div> -->
            </div>
        </section>
        <!-- Shop Section End -->

        <script>

            $(document).ready(function () {
                $('#category').change(function () {
                    const selectedCategory = $(this).val();
                    console.log(selectedCategory)
                    fetchFilterProducts(selectedCategory);
                });

                $('#sort').change(function () {
                    const selectedSortOption = $(this).val();
                    console.log(selectedSortOption)
                    fetchSortProducts(selectedSortOption);
                });
            });
            function fetchFilterProducts(filterOption) {

                // Send the AJAX request
                $.ajax({
                    url: '/shop',
                    type: 'GET',
                    data: { category: filterOption },
                    success: function (products) {
                        displayProducts(products);
                    },
                    error: function (xhr, status, error) {
                        console.error('Error fetching products:', error);
                    }
                });
            }

            function fetchSortProducts(sortOption) {

                // Send the AJAX request
                $.ajax({
                    url: '/shop',
                    type: 'GET',
                    data: { sort: sortOption },
                    success: function (products) {
                        displayProducts(products);
                    },
                    error: function (xhr, status, error) {
                        console.error('Error fetching products:', error);
                    }
                });
            }

            function displayProducts(products) {
                const productsContainer = $('.products-container');
                if (products.length === 0) {
                    console.log('No products received');
                    return;
                }
                productsContainer.empty();
                productsContainer.css('display', 'flex');
                productsContainer.css('flex-wrap', 'wrap'); // Optional: Allow wrapping if needed

                // productsContainer.append('<div class="row">');

                // Iterate over products and append each product element
                products.forEach(product => {
                    // Append individual product element
                    productsContainer.append(`
        <div class="col-lg-3 col-md-6 col-sm-6">
            <div class="product__item">
                <div class="product__item__pic set-bg">
                    <img src="/img/shop/${product.images[0]}" alt="${product.name}" style="height: 100%; width: 100%;">
                </div>
                <div class="product__item__text">
                    <h6><a href="/product?id=${product._id}">${product.name}</a></h6>
                    <div class="product__item__price">₹${product.price}/piece</div>
                    <div class="cart_add">
                        <a href="/addToCart">Add to cart</a>
                    </div>
                </div>
            </div>
        </div>
    `);
                });

            }

        </script>
        <%- include('../partials/footer.ejs') %>

