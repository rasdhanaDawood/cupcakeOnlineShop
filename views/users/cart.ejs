<%- include('../partials/head.ejs') %>
    <%- include('../partials/userHeader.ejs') %>
        <!-- Breadcrumb Begin -->
        <style>
            input[type="number"]::-webkit-outer-spin-button,
            input[type="number"]::-webkit-inner-spin-button {
                -webkit-appearance: none;
                margin: 0;
            }

            input[type="number"] {
                text-align: center;
                width: 50px;
            }

            .quantity {
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .quantity button {
                width: 30px;
                height: 30px;
                display: flex;
                align-items: center;
                justify-content: center;
                border: none;
                cursor: pointer;
            }

            .quantity button.dec {
                border-radius: none;
            }

            .quantity button.inc {
                border-radius: none;
            }

            .quantity input {
                border: none;
                border-left: none;
                border-right: none;
            }

            .error {
                color: red;
                font-size: 14px;
            }

            .qty {
                font-size: 16px;
                width: 40px;
                cursor: pointer;
                font-weight: 500;
                border: none;
            }

            .cart-items.disabled {
                opacity: 0.5;
                pointer-events: none;
            }
        </style>
        <div class="breadcrumb-option">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="breadcrumb__text">
                            <h2>Shopping cart</h2>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="breadcrumb__links">
                            <a href="/home">Home</a>
                            <span>Shopping cart</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Breadcrumb End -->

        <!-- Shopping Cart Section Begin -->
        <section class="shopping-cart spad">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8">
                        <form id="updateCartForm" action="/cart" method="post">


                            <% if (message.length> 0) { %>
                                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                                    <%- message %>
                                </div>
                                <% } %>

                                    <div class="shopping__cart__table">
                                        <% if(isEmpty){ %>
                                            <h3>Cart is Empty</h3>
                                            <% } else {%>

                                                <table>
                                                    <thead>
                                                        <tr>
                                                            <th>Product</th>
                                                            <th>Quantity</th>
                                                            <th>Total</th>
                                                            <th></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody class="product">
                                                        <% cartItems.forEach((cartItem)=> { %>
                                                            <tr class="cart-items">

                                                                <td class="product__cart__item">
                                                                    <div class="product__cart__item__pic">

                                                                        <img src="img/shop/<%= cartItem.product.images[0] %>"
                                                                            style="height:80px" alt="">
                                                                    </div>

                                                                    <div class="product__cart__item__text">
                                                                        <h6>
                                                                            <%= cartItem.product.name %>
                                                                        </h6>

                                                                        <h5>
                                                                            <span class="price">
                                                                                ₹<%= cartItem.product.price.toFixed(2)
                                                                                    %>
                                                                            </span>
                                                                        </h5>

                                                                    </div>
                                                                    <% if (cartItem.product.stock<=0) { %>
                                                                        <span class="error">Out
                                                                            of
                                                                            stock!!</span>
                                                                        <% }else{ %>
                                                                            <% if (cartItem.product.stock < 6) { %>
                                                                                <span class="error">Only
                                                                                    <%=cartItem.product.stock%>
                                                                                        left!!
                                                                                </span>
                                                                                <% }} %>

                                                                </td>
                                                                <td class="quantity__item">
                                                                    <div class="quantity">
                                                                        <button type="button" class="btn dec"
                                                                            data-product-id="<%= cartItem.product._id %>">-</button>
                                                                        <input type="number" class="qty"
                                                                            value="<%= cartItem.quantity %>"
                                                                            name="quantity_<%= cartItem.product._id %>"
                                                                            id="<%= cartItem.product._id %>"
                                                                            data-product-id="<%= cartItem.product._id %>"
                                                                            min="1" max="20" readonly>
                                                                        <button type="button" class="btn inc"
                                                                            data-product-id="<%= cartItem.product._id %>">+</button>
                                                                    </div>
                                                                </td>

                                                                <td class=" cart__price"><span class="subtotal">
                                                                        ₹<%= (cartItem.product.price *
                                                                            cartItem.quantity).toFixed(2)%>
                                                                    </span></td>

                                                                <td class="cart__close"><a href="/cart"><button
                                                                            class="btn icon_close"
                                                                            onclick="deleteProduct('<%= cartItem.product._id %>')"
                                                                            type="button"></button></a>
                                                                </td>

                                                            </tr>
                                                            <% })} %>

                                                    </tbody>
                                                </table>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-sm-6">
                                            <div class="continue__btn">
                                                <a href="/shop">Continue Shopping</a>
                                            </div>
                                        </div>
                                    </div>
                    </div>

                    <% if(!isEmpty){ %>

                        <div class="col-lg-4">

                            <div class="cart__total">
                                <h6>Cart total</h6>
                                <ul>

                                    <li>Subtotal <span class="total" id="sub">₹ <%= total.toFixed(2) %></span>
                                    </li>

                                    <li>Total <span id="total">₹ <%= finalTotal.toFixed(2) %>
                                        </span>
                                    </li>
                                </ul>
                                <div class="col-lg-6 col-md-6 col-sm-6">
                                    <div class="continue__btn update__btn">
                                        <input type="hidden" name="total" id="hiddenTotal" value="<%=total %>">
                                        <button class=" btn primary-btn" type="submit"
                                            onclick="submitForm()">Proceed</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                            </form>
                </div>
            </div>
        </section>
        <!-- Shopping Cart Section End -->
