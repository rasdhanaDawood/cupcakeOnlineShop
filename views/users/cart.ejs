                        const productId = this.dataset.productId;
                        const inputField = document.querySelector('.qty[data-product-id="' + productId + '"]');
                        let quantity = parseInt(inputField.value);
                        if (quantity > 1) {
                            quantity--;
                            inputField.value = quantity;
                            updateSubtotal(productId);
                        }
                    });
                });

