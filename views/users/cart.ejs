                        total += subtotal;
                        console.log('total', total)

                    });

                    const finalTotal = total;
                    document.getElementById('total').textContent = '₹' + finalTotal.toFixed(2);
                    document.getElementById('sub').textContent = '₹' + total.toFixed(2);

