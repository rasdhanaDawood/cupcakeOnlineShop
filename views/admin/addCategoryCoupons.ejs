<%- include('../partials/adminHeader.ejs') -%>
    <div class="row">
        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
            <div class="card center">
                <h5 class="card-header">Add Coupon</h5>
                <div class="card-body">
                    <% if (errorMessage.length> 0) { %>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <%- errorMessage %>
                        </div>
                        <% } %>
                            <% if (successMessage.length> 0) { %>
                                <div class="alert alert-success alert-dismissible fade show" role="alert">
                                    <%- successMessage %>
                                </div>
                                <% } %>

                                    <form action="/admin/addCategoryCoupons" method="post">
                                        <div class="form-group">
                                            <label for="code" class="col-form-label">Coupon Code:</label><br>
                                            <input type="text" class="form-control" id="code" name="code"
                                                required><br><br>
                                        </div>
                                        <div class="form-group">
                                            <label for="amount" class="col-form-label">Discount in
                                                Percentage:</label><br>
                                            <input type="number" class="form-control" id="amount" name="amount" min="0"
                                                step="any" required><br><br>
                                        </div>
                                        <div class="form-group">
                                            <label for="type" class="col-form-label">Discount Type:</label><br>
                                            <select id="type" name="type" class="form-control" disabled>

                                                <option value="category">Category</option>
                                            </select><br><br>
                                        </div>
                                        <div class="form-group">
                                            <label for="expiresAt" class="col-form-label">Expiration Date:</label><br>
                                            <input type="date" id="expiresAt" class="form-control"
                                                name="expiresAt"><br><br>
                                        </div>
                                        <label class="col-form-label" for="category">Category Offer:</label><br>
                                        <select id="category" class="form-control" name="category">
                                            <option value="">Select category</option>
                                            <% for( let i=0;i<categories.length;i++) { %>
                                                <option value='<%= categories[i]._id%>'>
                                                    <%= categories[i].name%>
                                                </option>
                                                <% } %>
                                        </select><br><br>

                                        <input type="submit" class="btn-dark" value="Submit">
                                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/adminPlugins.ejs') -%>