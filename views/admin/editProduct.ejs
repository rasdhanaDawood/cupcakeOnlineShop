<%- include('../partials/adminHeader.ejs')%>
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">Add Product Details</h5>
                <div class="card-body">
                    <form action="/admin/editProduct" method="post">
                        <div class=" row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label for="inputText3" class="col-form-label">Product
                                        Name</label>
                                    <input id="inputText3" name="name" type="text" value="<%= product.name %>"
                                        class="form-control" required>
                                    <label for="inputText3" class="col-form-label">Price</label>
                                    <input id="inputText3" name="price" type="text" value="<%= product.price %>"
                                        class="form-control" required><br>

                                    <label for="input-select"> Category</label>
                                    <select class="form-control" name="category" id="input-select">

                                        <% for( let i=0;i<category.length;i++) { %>
                                            <option value='<%= category[i]._id%>'>
                                                <%= category[i].name%>
                                            </option>
                                            <% } %>

                                    </select>
                                    <label for="inputImage" class="col-form-label">Image</label><br>
                                    <input type="file" name="image" alt="insert-image" required>
                                    <div class="form-group">
                                        <label for="inputText3">Short Description</label>
                                        <input id="inputShort" name="shortDesc" type="text"
                                            value="<%= product.short_Description %>" class="form-control" required>
                                        <label for="exampleFormControlTextarea1">Detailed
                                            Description</label>
                                        <textarea class="form-control" name="detailDesc"
                                            value="<%= product.detail_Description%>" id="
                                        exampleFormControlTextarea1" rows="3" required></textarea><br>
                                        <label for="inputSmall" class="col-form-label">Stock</label>
                                        <input id="inputSmall" type="text" name="stock" value="<%= product.stock %>"
                                            class="form-control form-control-sm" required>
                                        <div class="form-check">
                                            <label for="inputDefault" class="col-form-label">Featured</label>
                                            <label class="custom-control custom-radio custom-control-inline">
                                                <input type="radio" name="isFeatured" value="true"
                                                    class="custom-control-input" <%if(product.is_Featured==true) {
                                                    %>checked
                                                <% } %>
                                                    ><span class="custom-control-label">Yes</span>
                                            </label>
                                            <label class="custom-control custom-radio custom-control-inline">
                                                <input type="radio" name="isFeatured" value="false"
                                                    class="custom-control-input" <%if(product.is_Featured==false) {
                                                    %>checked
                                                <% } %>
                                                    ><span class="custom-control-label">No</span>
                                            </label><br>
                                        </div>
                                        <div class="form-check">
                                            <label for="inputDefault" class="col-form-label">Deleted</label>
                                            <label class="custom-control custom-radio custom-control-inline">
                                                <input type="radio" name="isDeleted" value="true"
                                                    class="custom-control-input" <%if(product.is_Deleted==true) {
                                                    %>checked
                                                <% } %>
                                                    ><span class="custom-control-label">Yes</span>
                                            </label>
                                            <label class="custom-control custom-radio custom-control-inline">
                                                <input type="radio" name="isDeleted" value="false"
                                                    class="custom-control-input" <%if(product.is_Deleted==false) {
                                                    %>checked
                                                <% } %>
                                                    ><span class="custom-control-label">No
                                                    </span>
                                            </label><br>
                                        </div>
                                        <input type="hidden" name="id" value="<%= product._id %>">
                                        <input type="submit" class="btn-dark" value="Update Product">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/adminPlugins.ejs')%>