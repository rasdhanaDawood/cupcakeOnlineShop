<%- include('../partials/adminHeader.ejs') -%>
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <h5 class="card-header">Add Product Details</h5>
            <div class="card-body">
                <form action="/admin/editCategory" method="post">
                    <div class=" row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <label for="inputText3" class="col-form-label">Category
                                    Name</label>
                                <input id="inputText3" name="name" type="text" value="<%= category.name %>"
                                    class="form-control" required>
                                <label for="inputText3" class="col-form-label">Toppings</label>
                                <input id="inputText3" name="toppings" type="text" value="<%= category.toppings %>"
                                    class="form-control" required><br>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" value="true" name="status"
                                        id="flexRadioDefault1" <%if(category.status==true) { %>checked <% } %>>
                                        <label class="form-check-label" for="flexRadioDefault1">
                                            Available
                                        </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" value="false" name="status"
                                        id="flexRadioDefault2" <% if(category.status==false) { %>checked <% } %>>
                                        <label class="form-check-label" for="flexRadioDefault2">
                                            Not Available
                                        </label>
                                </div>
                                <br><br>
                                <input type="hidden" name="id" value="<%= category._id %>">
                                <input type="submit" class="btn-dark" value="Update Category">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <%- include('../partials/adminPlugins.ejs') -%>