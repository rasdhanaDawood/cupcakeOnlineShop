<%- include('../partials/adminHeader.ejs') -%>
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h2 class="card-header">Product</h2>
                <br>
                <% if (errorMessage.length> 0) { %>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <%- errorMessage %>
                    </div>
                    <% } %>
                        <% if (successMessage.length> 0) { %>
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <%- successMessage %>
                            </div>
                            <% } %>
                                <div class="card-body">
                                    <table style="width: 100%">
                                        <tr style="height: 55%">
                                            <th>Name</th>
                                            <th>Image</th>
                                            <th>Price</th>
                                            <th>Short description</th>
                                            <th>Rating</th>
                                            <th>Category</th>
                                            <th>Toppings</th>
                                            <th>Stock</th>
                                            <th>Featured</th>
                                            <!-- <th>Deleted</th> -->
                                            <th>Action</th>
                                        </tr>

                                        <% if(product.length>0){
                                            for(let i=0;i<product.length;i++){ %>
                                                <tr>
                                                    <td>
                                                        <%= product[i].name %>
                                                    </td>

                                                    <td>
                                                        <img src="/img/shop/<%=product[i].images[0]%>"
                                                            alt="<%=product[i].images[0]%>" width="100px"
                                                            height="100px">
                                                        <a href="/admin/resize?id=<%= product[i]._id %>">
                                                            <button class="btn-dark" style="width: 100%;"
                                                                type="button">Resize Image</button>
                                                        </a>

                                                    </td>

                                                    <td>
                                                        <%= product[i].price %>
                                                    </td>

                                                    <td>
                                                        <%= product[i].short_description %>
                                                    </td>

                                                    <td>
                                                        <%= product[i].rating %>
                                                    </td>

                                                    <td>
                                                        <%= product[i].category.name %>
                                                    </td>

                                                    <td>
                                                        <ul>

                                                            <% for(let j=0; j < product[i].category.toppings.length;
                                                                j++){ %>
                                                                <li>
                                                                    <%=product[i].category.toppings[j]%>
                                                                </li>
                                                                <% } %>
                                                        </ul>
                                                        <!-- <%= product[i].category.toppings %> -->
                                                    </td>

                                                    <td>
                                                        <%= product[i].stock %>
                                                    </td>

                                                    <td>
                                                        <%=product[i].is_Featured %>
                                                    </td>

                                                    <!-- <td>
                                                        <%= product[i].is_Deleted %>
                                                    </td> -->

                                                    <td>
                                                        <a href="/admin/editProduct?id=<%= product[i]._id %>">
                                                            <button class="btn-dark" style="width: 100%;"
                                                                type="button">Edit</button>
                                                        </a>
                                                        <a href="/admin/deleteProduct?id=<%= product[i]._id %>"><button
                                                                class="btn-dark" style="width: 100%;"
                                                                type="button">Delete</button>
                                                        </a>
                                                    </td>

                                                </tr>
                                                <% } }else{ %>
                                                    <tr>
                                                        <td colspan="10">Products Not Found
                                                        </td>
                                                    </tr>
                                                    <% } %>
                                    </table>




                                </div>
                                <a href="/admin/addProduct">
                                    <button class=" btn-dark" style="width: 20%;">Add
                                        Product</button></a><br>
                                <input type="hidden" name="id" value="<%= product._id %>">

            </div>
        </div>
    </div>
    <%- include('../partials/adminPlugins.ejs') -%>